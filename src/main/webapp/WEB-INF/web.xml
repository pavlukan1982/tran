<web-app xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		 id="WebApp_ID" version="3.0"
		 metadata-complete="true">



	<servlet>
		<servlet-name>BackOfficeAdmin</servlet-name>
		<servlet-class>com.surancebay.servlet.BackOfficeAdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BackOfficeAdmin</servlet-name>
		<url-pattern>/BackOfficeAdmin</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>BackOfficeAdminRest</display-name>
		<servlet-name>BackOfficeAdminRest</servlet-name>
		<servlet-class>org.apache.cxf.jaxrs.servlet.CXFNonSpringJaxrsServlet</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.surancebay.backofficeadmin.BackOfficeAdminApp</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>BackOfficeAdminRest</servlet-name>
		<url-pattern>/boarest/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>BoaSecurityFilter</filter-name>
		<filter-class>com.surancebay.backofficeadmin.security.BoaSecurityFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>BoaSecurityFilter</filter-name>
		<url-pattern>/BackOfficeAdmin/*</url-pattern>
		<url-pattern>/boa/*</url-pattern>
	</filter-mapping>

	<security-constraint>
  		<web-resource-collection>
   			<web-resource-name>Admin pages</web-resource-name>
   			<url-pattern>/admin/*</url-pattern>
  		</web-resource-collection>
  		<auth-constraint>
   			<role-name>manager</role-name>
  		</auth-constraint>
 	</security-constraint>
 	
 	<security-role>
  		<role-name>manager</role-name>
 	</security-role>
 	<security-role>
  		<role-name>AUTHENTICATED_USER</role-name>
 	</security-role>
 	
 	<login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

    <session-config>
    	<session-timeout>30</session-timeout>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

</web-app>
